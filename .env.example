# Application Configuration
PORT=3000
NODE_ENV=development

# Bot Authentication
BOT_API_KEY=your_bot_api_key_here
API_KEY_SALT=your_api_key_salt_here

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_URL="postgresql://league_user:league_pass@localhost:5432/league_db?schema=public"

# Discord OAuth
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_CALLBACK_URL=http://localhost:3000/auth/discord/callback

# JWT Configuration (RS256)
# Generate RSA key pair using:
#   openssl genrsa -out jwt-private.pem 2048
#   openssl rsa -in jwt-private.pem -pubout -out jwt-public.pem
JWT_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
...
-----END RSA PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----
...
-----END PUBLIC KEY-----"
JWT_EXPIRES_IN=7d

# Encryption Key
ENCRYPTION_KEY=your_encryption_key_here

# Discord Bot Token
# Get this from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Discord API Configuration (optional - has defaults)
DISCORD_API_URL=https://discord.com/api/v10
DISCORD_TIMEOUT=10000
DISCORD_RETRY_ATTEMPTS=3

# Redis Configuration
# For local docker-compose: use 'localhost'
# For Railway docker-compose: use 'redis' (service name)
# For Railway managed Redis: Railway will set REDIS_HOST automatically
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# BullMQ Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_DEFAULT_JOB_OPTIONS={"removeOnComplete": 100, "removeOnFail": 50, "attempts": 3, "backoff": {"type": "exponential", "delay": 2000}}

# Decodo Scraper API Configuration
DECODO_API_KEY=your_decodo_api_key_here
DECODO_API_URL=https://scraper-api.decodo.com/v2/scrape
DECODO_RATE_LIMIT_PER_MINUTE=60
DECODO_TIMEOUT_MS=30000
DECODO_RETRY_ATTEMPTS=3
DECODO_RETRY_DELAY_MS=1000

# Decodo Proxy Configuration (for FlareSolverr)
DECODO_PROXY_URL=http://gate.decodo.com:7000
DECODO_PROXY_USERNAME=your_decodo_proxy_username_here
DECODO_PROXY_PASSWORD=your_decodo_proxy_password_here

# FlareSolverr Configuration
FLARESOLVERR_URL=http://flaresolverr:8191

# Tracker Refresh Configuration
TRACKER_REFRESH_INTERVAL_HOURS=24
TRACKER_BATCH_SIZE=100
TRACKER_REFRESH_CRON=0 2 * * *
TRACKER_MAX_SCRAPING_ATTEMPTS=3

# New Relic Logging Credentials
NEW_RELIC_API_KEY=your_new_relic_api_key_here
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key_here
NEW_RELIC_APP_NAME=League API
